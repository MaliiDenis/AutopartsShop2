@model Motora.Domain.Models.Feedback
@{
ViewBag.Title = "Contact";
}

<section class="contact_section layout_padding">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="form_container">
                    <div class="heading_container">
                        <h2>Get In Touch</h2>
                    </div>
                    @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
                    {
                    <div>
                        @Html.TextBoxFor(m => m.Name, new { placeholder = "Your Name" })
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>
                    <div>
                        @Html.TextBoxFor(m => m.Email, new { placeholder = "Your Email" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                    <div>
                        @Html.TextBoxFor(m => m.Phone, new { placeholder = "Your Phone" })
                        @Html.ValidationMessageFor(m => m.Phone)
                    </div>
                    <div>
                        @Html.TextBoxFor(m => m.Message, new { @class = "message-box", placeholder = "Message" })
                        @Html.ValidationMessageFor(m => m.Message)
                    </div>
                    <div class="btn_box">
                        <button type="submit">SEND</button>
                    </div>
                    }
                    <div>
                        @if (ViewBag.Message != null)
                        {
                        <p>@ViewBag.Message</p>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="img-box">
                    <img src="~/Content/images/contact-img.png" alt="">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- end contact section -->

<!-- info section -->

<section class="info_section">
    <div class="info_container">
        <div class="container">
            <div class="row">
                <div class="col-lg-9">
                    <div class="info_contact">
                        <div class="row">
                            <div class="col-md-3">
                                <a href="#" class="link-box">
                                    <i class="fa fa-map-marker" aria-hidden="true"></i>
                                    <span>Location</span>
                                </a>
                            </div>
                            <div class="col-md-5">
                                <a href="#" class="link-box">
                                    <i class="fa fa-phone" aria-hidden="true"></i>
                                    <span>Call +01 1234567890</span>
                                </a>
                            </div>
                            <div class="col-md-4">
                                <a href="#" class="link-box">
                                    <i class="fa fa-envelope" aria-hidden="true"></i>
                                    <span>demo@gmail.com</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-5 col-lg-3 mx-auto">
                    <div class="info_form">
                        <form action="#">
                            <input type="email" placeholder="Enter Your Email" />
                            <button>
